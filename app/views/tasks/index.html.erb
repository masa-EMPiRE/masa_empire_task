<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>

  <tbody>
    <% @tasks.each do |task| %>
      <ul>
        <li>
          <%= link_to task.title, task%>|
          <%= link_to '削除', task, method: :delete, data: { confirm: 'Are you sure?' } %>
        </li>
      </ul>
    <% end %>
  </tbody>
</table>

<br>
<hr>
<h3>タスク登録</h3>
<%= render 'form', task: @task %>
